<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_med_detail"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"></android.support.v7.widget.Toolbar>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="25dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F2F2F2">

                <ImageView
                    android:id="@+id/imageView_medicine_image_detail"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:scaleType="center" />

            </FrameLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    style="@style/Subhead"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ชื่อการค้า (ภาษาไทย)" />

                <TextView
                    android:id="@+id/textView_med_tradeName_th"
                    style="@style/Body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    style="@style/Subhead"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ชื่อการค้า (ภาษาอังกฤษ)" />

                <TextView
                    android:id="@+id/textView_med_tradeName_eng"
                    style="@style/Body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    style="@style/Subhead"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="เลขทะเบียน" />

                <TextView
                    android:id="@+id/textView_med_regNumber"
                    style="@style/Body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    style="@style/Subhead"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ผู้ผลิต" />

                <TextView
                    android:id="@+id/textView_med_manufacturer"
                    style="@style/Body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    style="@style/Subhead"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ผู้รับอณุญาติ" />

                <TextView
                    android:id="@+id/textView_med_licenseName"
                    style="@style/Body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    style="@style/Subhead"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ผู้จัดจำหน่าย" />

                <TextView
                    android:id="@+id/textView_med_distributor"
                    style="@style/Body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>